#:include facilitiesmapview.kv

BoxLayout:
    orientation: 'vertical'
    FacilitiesMapView:
        id: mapview
    MDToolbar:
        id: bottom_toolbar
        title: "R3 Navigator"
        right_action_items:
            [
            ["set-center", lambda x: app.recenter(), "Recenter", "Recenter"],
            ["shopping", lambda x: app.change_goal(1), "Shop", "Shop"],
            ["dolly", lambda x: app.change_goal(2), "Donate", "Donate"],
            ["recycle", lambda x: app.change_goal(3), "Recycle", "Recycle"],
            ['magnify', lambda x: app.search_menu.open(), "Search", "Search"],
            ]

