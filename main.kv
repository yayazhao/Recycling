#:include facilitiesmapview.kv

BoxLayout:
    orientation: 'vertical'
    FacilitiesMapView:
        id: mapview
    MDToolbar:
        id: bottom_toolbar
        title: "R3 Navigator"
        md_bg_color: app.theme_cls.primary_color
        elevation: 10
        right_action_items:
            [
            ["set-center", lambda x: app.recenter(), 'Recenter'],
            ["shopping", lambda x: app.change_goal(1), 'Shop'],
            ["dolly", lambda x: app.change_goal(2), 'Donate'],
            ["recycle", lambda x: app.change_goal(3), 'Recycle'],
            ['magnify', lambda x: app.search_menu.open(), 'Search'],
            ]

